# Custom button
<CustButton@Button>:
    font_size: 50
    color: .5, .5, .5, 1
    background_color: 0, 0.2, 0.9, 1

<Container>:
    display: display
    rows: 1
    cols: 3
    spacing: 2
    padding: 10
    BoxLayout:
        CustButton:
            text: "<-"
            size_hint_y: .33
            pos_hint: {'center_y': 0.5}
            on_press: root.move_stage_backward()

    BoxLayout:
        orientation: "vertical"
        CustButton:
            text: "Up"
            on_press: root.increment_up()
        Label:
            id: display
            font_size: dp(50)
            text: '1'
        CustButton:
            text: "Down"
            on_press: root.increment_down()

    BoxLayout:
        CustButton:
            text: "->"
            size_hint_y: .33
            pos_hint: {'center_y': 0.5}
            on_press: root.move_stage_forward()